<resources>

    <style name="Theme.Mocket.Starting" parent="Theme.SplashScreen">

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an animated drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.Mocket</item>
    </style>

    <style name="Theme.Mocket" parent="android:Theme.Material.NoActionBar" />
</resources>